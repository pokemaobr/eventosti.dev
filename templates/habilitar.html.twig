        {% if eventos is not empty %}
        <p><strong>EVENTOS CADASTRADOS!</strong></p>
            <table id="dtScrapokes" class="table table-striped table-bordered table-sm">
                <thead>
                <tr>
                    <th class="th-sm">Nome
