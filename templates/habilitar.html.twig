                    <th class="th-sm">Gratuito
                    </th>
                    <th class="th-sm">Pago
                    </th>
                    <th class="th-sm">Habilitado
                    </th>


                </tr>
                </thead>
                <tbody>
                {% for evento in eventos %}
                    <tr>
                        <td>{{ evento.nome }}</td>
                        <td>{{ evento.tipo }}</td>
                        <td>{{ evento.local }}</td>
                        <td><a href="assets/images/events/{{ evento.imagem }}" target="_blank"><img src="assets/images/events/{{ evento.imagem }}" class="card-img-top rounded-0"
                                    alt=""></a></td>
                        <td>{{ evento.descricao }}</td>
                        <td>{{ evento.dataInicio|date("d/m/Y H:i:s") }}</td>
                        <td>{{ evento.dataFim|date("d/m/Y H:i:s") }}</td>
                        <td>{{ evento.link }}</td>
                        <td>{{ evento.ingresso }}</td>
                        <td>{{ evento.twitter }}</td>
                        <td>{{ evento.instagram }}</td>
                        <td>{{ evento.outro }}</td>
                        {% if evento.gratuito == 0 %}
                            <td>
                                <button id="gratuitoId{{ evento.id }}" onclick="transformarEmEventoGratuito('{{ evento.id }}','{{ path('transformar-em-evento-gratuito',{'id':evento.id}) }}')"
                                        class="btn btn-block btn-primary btn-primary d-flex flex-column text-white h-100">
                                    <i class="fab fa-vuejs"></i></button>
                            </td>
                        {% else %}
                            <td>
                                <button id="gratuitoId{{ evento.id }}" onclick="transformarEmEventoNaoGratuito('{{ evento.id }}','{{ path('transformar-em-evento-nao-gratuito',{'id':evento.id}) }}')"
                                        class="btn btn-block btn-primary btn-primary d-flex flex-column text-white h-100">
                                    <i class="fas fa-eye-slash"></i></button>
                            </td>
                        {% endif %}
                        {% if evento.pago == 0 %}
                            <td>
                                <button id="pagoId{{ evento.id }}" onclick="transformarEmEventoPago('{{ evento.id }}','{{ path('transformar-em-evento-pago',{'id':evento.id}) }}')"
                                        class="btn btn-block btn-primary btn-primary d-flex flex-column text-white h-100">
                                    <i class="fab fa-vuejs"></i></button>
                            </td>
                        {% else %}
                            <td>
                                <button id="pagoId{{ evento.id }}" onclick="transformarEmEventoNaoPago('{{ evento.id }}','{{ path('transformar-em-evento-nao-pago',{'id':evento.id}) }}')"
