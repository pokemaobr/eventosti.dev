                               data-bs-target="#modal-call4papers-{{ loop.index }}">Saiba Mais
                                &rarr;</a>
                        </div><!--//card-->
                        <div class="card-footer text-muted">
                            <ul class="social-list list-inline mb-0">
                                {% if evento.evento is not empty %}
                                    <li class="list-inline-item"><a href="{{ evento.evento }}" target="_blank"><i
                                                    class="fas fa-ticket-alt fa-fw" title="Link para o evento referente a esse Call 4 Papers"></i></a></li>
                                {% endif %}
                                {% if evento.twitter is not empty %}
                                    <li class="list-inline-item"><a href="{{ evento.twitter }}" target="_blank"><i
                                                    class="fab fa-twitter fa-fw" title="Conta do Twitter/X referente a esse Call 4 Papers"></i></a></li>
                                {% endif %}
                                {% if evento.instagram is not empty %}
                                    <li class="list-inline-item"><a href="{{ evento.instagram }}" target="_blank"><i
                                                    class="fab fa-instagram fa-fw" title="Instagram referente a esse Call 4 Papers"></i></a></li>
                                {% endif %}
                                {% if evento.outro is not empty %}
                                    <li class="list-inline-item"><a href="{{ evento.outro }}" target="_blank"><i
                                                    class="fab fa-internet-explorer fa-fw" title="Outro link relevante para esse Call 4 Papers"></i></a></li>
                                {% endif %}
