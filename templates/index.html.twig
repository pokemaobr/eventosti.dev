            {% for evento in call4papers %}
                <div class="col-6 col-lg-3 mb-4">
                    <div class="card rounded-0">
                        <a href="{{ evento.link }}" target="_blank"><img
                                    src="assets/images/events/{% if evento.imagem is not empty %}{{ evento.imagem }}{% else %}semimagem.png{% endif %}"
                                    class="card-img-top rounded-0"
                                    alt=""></a>
                        <div class="card-body">
                            <h5 class="card-title mb-2"><a href="{{ evento.link }}"
                                                           target="_blank">{{ evento.nome }}</a></h5>
                            <div class="card-text mb-3">
                                <span class="badge bg-secondary">{{ tipo[evento.tipo] }}</span>
                                <div class="meta"><b>Fecha em: {{ evento.dataEncerramento|date("d/m/Y") }}
                                        às {{ evento.dataEncerramento|date("H:i:s") }} </b></div>
                                <div class="meta">Previsão Início: {{ evento.dataInicio|date("d/m/Y") }}
                                    às {{ evento.dataInicio|date("H:i:s") }} </div>
                                <div class="meta">Previsão Fim: {{ evento.dataFim|date("d/m/Y") }}
                                    às {{ evento.dataFim|date("H:i:s") }} </div>
                                <div class="meta">{{ evento.local }}</div>
                            </div><!--//card-text-->
