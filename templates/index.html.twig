<!-- Modal Eventos -->
{% for evento in eventos %}
    <div class="modal modal-speaker modal-speaker-1" id="modal-eventos-{{ loop.index }}" tabindex="-1" role="dialog"
         aria-labelledby="speaker-{{ loop.index }}-ModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 id="speaker-{{ loop.index }}-ModalLabel" class="modal-title sr-only"
                    >Nome do Evento</h4>
                </div>
                <div class="modal-body p-0">
                    <div class="theme-bg-light p-5">
                        <div class="row">
                            <div class="col-12 col-md-auto text-center">
                                <a href="{{ evento.link }}" target="_blank"><img
                                            class="profile-image mb-3 mb-md-0 me-md-4 rounded-circle mx-auto"
                                            src="assets/images/events/{{ evento.imagem }}" alt=""/></a>
                            </div>

                            <div class="col text-center text-md-start mx-auto">
                                <h2 class="name mb-2"><a href="{{ evento.link }}" target="_blank">{{ evento.nome }}</a>
                                </h2>
                                <span class="badge bg-secondary">{{ tipo[evento.tipo] }}</span>
                                {% if evento.gratuito is not empty %}
                                    <span class="badge bg-success">Gratuíto</span>
                                {% endif %}
                                {% if evento.pago is not empty %}
                                    <span class="badge bg-primary">Pago</span>
                                {% endif %}
                                <div class="meta">Início: {{ evento.dataInicio|date("d/m/Y") }}
                                    às {{ evento.dataInicio|date("H:i:s") }}</div>
                                <div class="meta">Fim: {{ evento.dataFim|date("d/m/Y") }}
                                    às {{ evento.dataFim|date("H:i:s") }} </div>
                                <div class="meta">{{ evento.local }}</div>
                                <ul class="social-list list-inline mb-0">
                                    {% if evento.ingresso is not empty %}
                                        <li class="list-inline-item"><a href="{{ evento.ingresso }}" target="_blank"><i
                                                        class="fas fa-ticket-alt fa-fw"></i></a></li>
                                    {% endif %}
                                    {% if evento.twitter is not empty %}
                                        <li class="list-inline-item"><a href="{{ evento.twitter }}" target="_blank"><i
                                                        class="fab fa-twitter fa-fw"></i></a></li>
                                    {% endif %}
                                    {% if evento.instagram is not empty %}
                                        <li class="list-inline-item"><a href="{{ evento.instagram }}" target="_blank"><i
                                                        class="fab fa-instagram fa-fw"></i></a></li>
                                    {% endif %}
                                    {% if evento.outro is not empty %}
                                        <li class="list-inline-item"><a href="{{ evento.outro }}" target="_blank"><i
                                                        class="fab fa-internet-explorer fa-fw"></i></a></li>
                                    {% endif %}
                                </ul><!--//social-list-->
                            </div><!--//col-->
                        </div><!--//row-->
                    </div>
                    <div class="desc p-4 p-lg-5">
                        <p>{{ evento.descricao }} </p>

                    </div>
                </div><!--//modal-body-->
            </div><!--//modal-content-->
        </div><!--//modal-dialog-->
    </div><!--//modal-->
{% endfor %}

